{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "allowJs": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "Node",
    "noEmitOnError": false,
    "outDir": "./dist",
    "declaration": true,
    "declarationDir": "./dist",
    "baseUrl": ".",
    "declarationMap": false
  },
  "include": ["src/**/*", "./package.json"],
  "exclude": ["node_modules"]
}

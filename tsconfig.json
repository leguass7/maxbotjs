{
  "compilerOptions": {
    "removeComments": false,
    "outDir": "./dist",
    "allowJs": true,
    "target": "es5",
    "module": "es6",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node"
  },
  "typeAcquisition": {
    "enable": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "rollup.config.js", "src/__tests__"]
}
